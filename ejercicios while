        static void Ejercicio4 ()
       
        {

            Console.WriteLine("Introduceme nÃºmeros positivos y negativos");
            int nums = int.Parse(Console.ReadLine());
            int total = nums;



            while (nums >= 0)
            {

                nums = int.Parse(Console.ReadLine());



                if (nums >= 0)


                {

                    total = total + nums;

                    


                }
        
                else

                {
                    Console.WriteLine("Ejercicio terminado, la suma es " + total);


                }




            }







               






        }


        static void Ejercicio5 ()
        {


            Console.WriteLine("Escribeme varios numeros");
            int nums = int.Parse(Console.ReadLine());
            int suma = nums;

            while (nums!=0)
            {

                nums = int.Parse(Console.ReadLine());

                if (nums!=0)
                {

                    suma = suma * nums;

                }
                else
                {

                    Console.WriteLine("Ejercicio terminado " + suma);

                }


            }
        }

        static void Ejercicio6()
        {

            Console.WriteLine("Escribeme varios numeros");
            int nums = int.Parse(Console.ReadLine());
            int suma = 0;

            while (nums >= 0)
            {

                

                if (nums%2== 0)
                {

                    suma = suma + nums;

                }
                nums = int.Parse(Console.ReadLine());



            }


            Console.WriteLine(suma);


        }

        static void Ejercicio7()
        {


            int combinacion = 1234;
            
           
            Console.WriteLine("Introduce combinacion de 4 digitos para abrir la caja fuerte");
            int intentos = 0;
            int teclado = 1;
            
            while (teclado!=1234 && intentos<4)
            {
                teclado = int.Parse(Console.ReadLine());

                intentos++;

                if (teclado == combinacion)
                {

                    Console.WriteLine("Combinacion correcta, caja fuerte desbloqueada");

                } else if (intentos==4)
                {
                    Console.WriteLine("Caja fuerte bloqueada");


                } else
                {

                    Console.WriteLine("Combinacion incorrecta");
                    
                }

                





            }

            
        }

        static void Ejercicio1()
        {





            Console.WriteLine("Dime un numero");
            int num1 = int.Parse(Console.ReadLine());
            int contador = 1;
            while (contador <= num1)
            {

                Console.WriteLine(contador);
                contador = contador + 1;


            }

            Console.WriteLine("fin");

        }

        static void Ejercicio2()
        {

            Console.WriteLine("Dime un numero");

            int contador = 0;
            while (contador <= 100)
            {

                Console.WriteLine(contador);
                contador = contador + 5;


            }

            Console.WriteLine("fin");


        }

        static void Ejercicio3()
        {


            int contador = 320;
            while (contador >= 160)
            {

                Console.WriteLine(contador);
