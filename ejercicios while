        static void Ejercicio4 ()
       
        {

            Console.WriteLine("Introduceme nÃºmeros positivos y negativos");
            int nums = int.Parse(Console.ReadLine());
            int suma = nums;



            while (nums >= 0)
            {

                nums = int.Parse(Console.ReadLine());



                if (nums >= 0)


                {

                    suma = suma + nums;

                    Console.WriteLine(suma + "total");


                }
        
                else

                {
                    Console.WriteLine("Ejercicio terminado" + suma);


                }




            }







               






        }


        static void Ejercicio5 ()
        {


            Console.WriteLine("Escribeme varios numeros");
            int nums = int.Parse(Console.ReadLine());
            int suma = nums;

            while (nums!=0)
            {

                nums = int.Parse(Console.ReadLine());

                if (nums!=0)
                {

                    suma = suma * nums;

                }
                else
                {

                    Console.WriteLine("Ejercicio terminado " + suma);

                }


            }
        }

        static void Ejercicio6()
